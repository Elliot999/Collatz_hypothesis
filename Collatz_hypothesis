c0 = int(input("Input in a number except higher than 1:"))
steps = 0

while c0 != 1:
    if c0 %2 == 0:
        c0 = c0//2
        steps +=1
        print(c0)
    if c0 %2 != 0:
        if c0 != 1:
            c0 = 3 * c0 + 1
            print(c0)
            steps +=1
        if c0 == 1:
            print("number of steps:", steps)
